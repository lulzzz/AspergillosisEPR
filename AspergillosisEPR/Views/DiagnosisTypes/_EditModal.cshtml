@model AspergillosisEPR.Models.SettingsViewModels.AddNewItemViewModel
<div class="modal fade edit-settings-modal" tabindex="-1" role="dialog" id="new-@(Model.Underscore)-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Edit @(Model.Title)</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body">
                    <form asp-controller="@Model.Controller" asp-action="Edit" class="smart-form settings-form" data-ajax="true" data-ajax-method="POST" id="edit-@(Model.Underscore)-form">
                        <fieldset>
                            <div class="row">
                                <label class="input" for="Name">
                                    <i class="icon-append fa fa-info-circle"></i>
                                    <input type="hidden" value="@Model.ItemId" name="@(Model.ItemKlass).ID" />
                                    <input placeholder="Enter @(Model.Title) Name" name="Name" value="@(Model.Name)">
                                    <span class="text-danger"></span>
                                </label>
                                <label class="input" for="ShortName">
                                    <i class="icon-append fa fa-info-circle"></i>
                                    <input placeholder="Enter @(Model.Title) Short Name ie SAFS, CPA, TB" name="ShortName" value="@(Model.ShortName)">
                                    <span class="text-danger"></span>
                                </label>
                           </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success submit-settings-item" data-tab="@(Model.Tab)">Update</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}