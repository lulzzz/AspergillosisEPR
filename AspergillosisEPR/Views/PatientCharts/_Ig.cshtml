<div id="ig-chart-@(Model.Patient.ID)" class="printable modal fade ig-chart-modal" data-id="@(Model.Patient.ID)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Ig levels Chart for @(Model.Patient.FullName)  RM2: @(Model.Patient.RM2Number) </h3>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="window.print();"><i class="fa fa-print"></i>&nbsp; Print</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="$('div.modal-backdrop.in').remove()"><i class="fa fa-close"></i>&nbsp; Close Chart</button>
            </div>
        </div>
    </div>
</div>