@model AspergillosisEPR.Models.CaseReportForms.CaseReportFormField;
<div class="row">
    <section class="col col-4 label-render">
        <label>@Model.Label</label>
    </section>
    <section class="col col-12">
        <label class="select">
            <label class="select">
                @Html.DropDownList("CaseReportFormPatientResult.CaseReportFormOptionChoiceId", Model.Options.Select(o => o.DropdownItem()).ToList(), new { @multiple = "multiple" })
                @Html.Hidden("CaseReportFormPatientResult.CaseReportFormFieldId", Model.ID)
            </label>
        </label>
    </section>
</div>
